<Alloy>
	<Window  id="win">
		<View id="main" backgroundColor="#20B4D8">
			<ListView id="streamListview">
				<Templates backgroundColor="red">
					<ItemTemplate name="template" id="template">
						<View id="mainView">
							<View  id="viewLabel">
								<Label bindId="label" id="labeltexto"/>
							</View>
							<View  id="viewValue">
								<Label bindId="value" id="labelvalue"/>
							</View>
						</View>
					</ItemTemplate>
				</Templates>
				<ListSection id="section" >
					<ListItem template="template"/>
				</ListSection>
			</ListView>
		</View>
	</Window>
</Alloy>         